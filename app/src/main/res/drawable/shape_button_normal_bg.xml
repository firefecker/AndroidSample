<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:bottom="5dp">

        <shape
            android:shape="rectangle">

            <!-- 渐变 -->
            <gradient
                android:endColor="#FF9138"
                android:startColor="#FFB136"
                android:type="linear" />

            <!-- 圆角 -->
            <corners android:radius="45dp" />
        </shape>
    </item>

    <item>
        <shape
            android:shape="rectangle">
            <!--填充-->
            <solid android:color="#30FFB136" />
            <!-- 圆角 -->
            <corners android:radius="45dp" />
            <!--间距-->
            <padding
                android:bottom="10dp"
                android:top="10dp"
                android:right="10dp"
                android:left="10dp" />
        </shape>
    </item>
</layer-list>
